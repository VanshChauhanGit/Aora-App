{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "app/(tabs)/_layout.jsx",
    "components/CustomButton.jsx",
    "app/(auth)/sign-up.jsx",
    "app/(auth)/sign-in.jsx",
    "app/index.jsx",
    "app/(tabs)/home.jsx",
    "app/search/[query].jsx",
    "app/(tabs)/profile.jsx",
    "app/(tabs)/saved.jsx",
    "app/(tabs)/create.jsx"
  ]
}
